<view><cu-custom vue-id="1" bgColor="bg-gradual-orange" isBack="{{true}}" onVueInit="__l"><view slot="backText"></view><view slot="content">设置</view></cu-custom><scroll-view class="page bg-white " scroll-y><view class="cu-bar bg-white justify-end"><view class="content">请您设置好个人相关信息</view></view><view class="padding-sm"><view class="bg-white"><view class="flex solid-bottom padding justify-center"><view class=" radius"><image class="cu-avatar round xl" src="{{UserInfo.UserAvatar}}"></image></view></view><view class="cu-form-group"><view class="title">用户姓名</view><input name="username" data-event-opts="{{[['input',[['inputUsername',['$event']]]]]}}" value="{{UserInfo.UserName}}" onInput="__e"/></view><view class="cu-form-group flex"><view class="title">性别选择</view><view data-event-opts="{{[['tap',[['ChangeSex',['男']]]]]}}" class="{{(('flex-sub  cu-tag ')+' '+(UserInfo.UserSex=='女'?'':'cu-tag bg-orange'))}}" onTap="__e">男</view><view data-event-opts="{{[['tap',[['ChangeSex',['女']]]]]}}" class="{{(('flex-sub  cu-tag ')+' '+(UserInfo.UserSex=='男'?'':'cu-tag bg-orange'))}}" onTap="__e">女</view></view><view class="cu-form-group"><view class="title">心情留言</view><input style="text-align:left;" name="liuyan" data-event-opts="{{[['input',[['inputUsermsg',['$event']]]]]}}" value="{{UserInfo.UserMsg}}" onInput="__e"/></view></view><view class="cu-bar bg-white justify-end"><view class="action"><button data-event-opts="{{[['tap',[['go_back',['$event']]]]]}}" class="cu-btn line-orange text-orange" onTap="__e">取消</button><button data-event-opts="{{[['tap',[['go_save_user',['$event']]]]]}}" class="cu-btn bg-orange margin-left" onTap="__e">保存</button></view></view></view></scroll-view></view>